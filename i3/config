# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
set $resize : [h], [j], [k], [l]
mode "$resize" {
    # These bindings trigger as soon as you enter the resize mode

    # Pressing left will shrink the window’s width.
    # Pressing right will grow the window’s width.
    # Pressing up will shrink the window’s height.
    # Pressing down will grow the window’s height.
    bindsym h resize shrink width  10 px or 3 ppt
    bindsym j resize grow   height 10 px or 3 ppt
    bindsym k resize shrink height 10 px or 3 ppt
    bindsym l resize grow   width  10 px or 3 ppt

    # same bindings, but for the arrow keys
    bindsym Left  resize shrink width  10 px or 3 ppt
    bindsym Down  resize grow   height 10 px or 3 ppt
    bindsym Up    resize shrink height 10 px or 3 ppt
    bindsym Right resize grow   width  10 px or 3 ppt

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+r mode "$resize"

# external screen management
set $display_layout : [a], [h] ( ↾), [j] (↾?), [k] ( ↾), [l] ( ↾), [s] 
mode "$display_layout" {
    bindsym a     mode "default" exec $set_monitors       && $restart_barrier        && i3-msg restart

    bindsym h     mode "default" exec $set_monitors left  && $restart_barrier both   && i3-msg restart
    bindsym Left  mode "default" exec $set_monitors left  && $restart_barrier both   && i3-msg restart

    bindsym l     mode "default" exec $set_monitors right && $restart_barrier both   && i3-msg restart
    bindsym Right mode "default" exec $set_monitors right && $restart_barrier both   && i3-msg restart

    bindsym j     mode "default" exec $set_monitors down  && $restart_barrier        && i3-msg restart
    bindsym Down  mode "default" exec $set_monitors down  && $restart_barrier        && i3-msg restart
    bindsym k     mode "default" exec $set_monitors up    && $restart_barrier center && i3-msg restart
    bindsym Up    mode "default" exec $set_monitors up    && $restart_barrier center && i3-msg restart

    bindsym s     mode "default" exec $lock true

    bindsym Return mode "default" exec ~/.config/i3/rgb.sh on
    bindsym Escape mode "default"
}

bindsym $mod+p mode "$display_layout"

# passthrough i3 keybinds
set $passthrough : [mod+Pause] End Passthrough
mode "$passthrough" {
    bindsym $mod+Pause mode default
}
bindsym $mod+Pause mode "$passthrough"

# Start i3bar to display a workspace bar (plus the system information i3status finds out, if available)
set $bar_height 23
bar {
    status_command i3blocks
    position top
    tray_output primary
    height $bar_height

    colors {
        background #282828
        statusline #ebdbb2
        separator  #00000000

        #                  border  backgr. text
        focused_workspace  #fabd2f #fabd2f #282828
        active_workspace   #d79921 #5f676a #d79921
        inactive_workspace #282828 #282828 #d79921
        urgent_workspace   #cc241d #fb4934 #ffffff
    }
}

