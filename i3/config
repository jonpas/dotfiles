# Function Keys
bindsym XF86MonBrightnessUp   exec pkill -RTMIN+1 i3blocks # Actual brightness controlled by hardware
bindsym XF86MonBrightnessDown exec pkill -RTMIN+1 i3blocks # Actual brightness controlled by hardware
bindsym XF86AudioRaiseVolume  exec --no-startup-id amixer -q set Master 5%+    && pkill -RTMIN+3 i3blocks
bindsym XF86AudioLowerVolume  exec --no-startup-id amixer -q set Master 5%-    && pkill -RTMIN+3 i3blocks
bindsym XF86AudioMute         exec --no-startup-id amixer -q set Master toggle && pkill -RTMIN+3 i3blocks
