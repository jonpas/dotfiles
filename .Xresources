! Xresources

! Cursor size (default: 24 @1080p, vertical stack increases it)
Xcursor.size: 12

! Layout
rofi.width:                          50
rofi.lines:                          15
rofi.columns:                        2
rofi.color-enabled:                  true
rofi.color-normal:                   #282828,#ebdbb2,#353535,#ff9800,#282828
rofi.color-urgent:                   #282828,#d79921,#353535,#d79921,#282828
rofi.color-active:                   #282828,#ebdbb2,#353535,#ff9800,#282828
rofi.color-window:                   #282828,#ff9800

! Behaviour
!rofi.terminal:                       alacritty https://github.com/tomaka/winit/issues/705
rofi.terminal:                       termite
rofi.levenshtein-sort:               true
rofi.fuzzy:                          true
rofi.kb-cancel:                      Escape,Control+c
